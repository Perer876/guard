{
    "name": "guard/guard",
    "version": "0.1.0",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Guard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Guard\\Tests\\Unit\\": "tests/unit",
            "Guard\\Tests\\Fixture\\": "tests/fixture"
        }
    },
    "authors": [
        {
            "name": "Oscar Arambula",
            "email": "peteroso876@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "carthage-software/mago": "^0.26.1",
        "phpunit/phpunit": "^12.2"
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    }
}
